<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Task Manager</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <link href="/styles/style.css" rel="stylesheet">

  <style>
    /* Optional Dark Mode Enhancements */
    .dark-mode {
      background-color: #121212 !important;
      color: #ffffff !important;
    }

    .dark-mode .card {
      background-color: #1e1e1e;
      border-color: #2e2e2e;
    }

    .dark-mode .navbar,
    .dark-mode .btn-primary {
      background-color: #1f1f1f !important;
      border-color: #333 !important;
    }

    .dark-mode .form-control,
    .dark-mode .form-select {
      background-color: #2c2c2c;
      color: #fff;
      border-color: #444;
    }

    .dark-mode .btn-toggle-dark {
      background-color: #444;
      border: none;
    }

    .btn-toggle-dark {
      position: fixed;
      bottom: 20px;
      right: 20px;
      z-index: 999;
    }

    body {
      font-family: 'Poppins', sans-serif;
      transition: background-color 0.3s, color 0.3s;
    }

    .fade-in {
      animation: fadeUp 0.4s ease-in-out;
    }

    @keyframes fadeUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body id="body" class="bg-light">

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <div class="container">
      <a class="navbar-brand" href="/">Task Manager</a>
      <div class="d-flex align-items-center">
        <ul class="navbar-nav me-3">
          {{#if user}}
            <li class="nav-item"><a class="nav-link" href="/tasks">My Tasks</a></li>
            <li class="nav-item"><a class="nav-link" href="/users/logout">Logout</a></li>
          {{else}}
            <li class="nav-item"><a class="nav-link" href="/users/login">Login</a></li>
            <li class="nav-item"><a class="nav-link" href="/users/register">Register</a></li>
          {{/if}}
          <li class="nav-item"><a class="nav-link" href="/public">Public View</a></li>
        </ul>

        <!-- ðŸŒ™ Dark Mode Button -->
        <button id="darkToggle" class="btn btn-outline-light btn-sm ms-2">ðŸŒ™ Dark Mode</button>
      </div>
    </div>
  </nav>

  <!-- ALERT MESSAGES -->
  <div class="container fade-in">
    {{#if success_msg}}<div class="alert alert-success">{{success_msg}}</div>{{/if}}
    {{#if error_msg}}<div class="alert alert-danger">{{error_msg}}</div>{{/if}}
    {{#if error}}<div class="alert alert-danger">{{error}}</div>{{/if}}

    {{{body}}}
  </div>

  <!-- Scripts -->
  <script>
    const body = document.getElementById('body');
    const toggleBtn = document.getElementById('darkToggle');

    // Apply stored theme on page load
    if (localStorage.getItem('theme') === 'dark') {
      body.classList.add('dark-mode');
    }

    // Toggle dark mode
    toggleBtn.addEventListener('click', () => {
      body.classList.toggle('dark-mode');
      const theme = body.classList.contains('dark-mode') ? 'dark' : 'light';
      localStorage.setItem('theme', theme);
    });
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
