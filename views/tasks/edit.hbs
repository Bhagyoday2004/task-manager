<h2>Edit Task</h2>
<form action="/tasks/edit/{{task._id}}?_method=PUT" method="POST">
  <input type="text" name="title" value="{{task.title}}" required><br>
  <textarea name="description">{{task.description}}</textarea><br>
  <input type="date" name="dueDate" value="{{task.dueDate}}"><br>
  <select name="status">
    <option {{#if (eq task.status "Pending")}}selected{{/if}}>Pending</option>
    <option {{#if (eq task.status "Completed")}}selected{{/if}}>Completed</option>
  </select><br>
  <button type="submit" class="btn btn-primary">Update</button>
</form>
