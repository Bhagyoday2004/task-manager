<h2>My Tasks</h2>
<form method="GET" action="/tasks">
  <input type="text" name="search" placeholder="Search tasks">
  <button type="submit">Search</button>
</form>
<a href="/tasks/add" class="btn btn-success mt-2">Add New Task</a>
<table class="table mt-3">
  <tr><th>Title</th><th>Status</th><th>Actions</th></tr>
  {{#each tasks}}
    <tr>
      <td>{{this.title}}</td>
      <td>{{this.status}}</td>
      <td>
        <a href="/tasks/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
        <form action="/tasks/delete/{{this._id}}?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
      </td>
    </tr>
  {{/each}}
</table>
